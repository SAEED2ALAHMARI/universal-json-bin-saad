{
	"display": "Svelte",
	"_version": "2.0.0",
	"compilerOptions": {
		"paths": {
      "@core-types/*": ["./src/types/*"],
      "@utils/*": ["./src/helpers/utils/*"],
      "@config/*": ["./src/config/*"],
      "@parsers/*": ["./src/parsers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@universal-schema/*": ["./src/universal-schema/*"],
      "@cross-framework-wrapper/*": ["./src/cross-framework-wrapper/*"],
      "@generated/*": ["./src/framework/generated/*"],
      "@framework/*": ["./src/framework/*"],
    },
	  "moduleResolution": "node",
	  "target": "es6",
	
		"lib": ["DOM", "ES2017", "WebWorker"],
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  /**
		Svelte Preprocess cannot figure out whether you have a value or a type, so tell TypeScript
		to enforce using `import type` instead of `import` for Types.
	   */
	  "importsNotUsedAsValues": "error",
	  "isolatedModules": true,
	  /**
		To have warnings/errors of the Svelte compiler at the correct position,
		enable source maps by default.
	   */
	  "sourceMap": true,
	  "noImplicitAny": false,
	  "resolveJsonModule": true,
  
	  "strict": false,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "jsx": "react",
	},
	"include": ["src/**/*", "demo/web/svelte/*", "src/node_modules/**/*"],
	"exclude": [
		"node_modules/*",
		"static/*",
		"src/**/**.spec.ts",
		"src/**/**.spec.tsx",
		"src/__e2e__",
		"cross-framework-wrapper",
		"__sapper__/*",
		"scripts/*",
	]
}
